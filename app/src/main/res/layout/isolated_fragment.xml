<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/essid"
                android:text="Chris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="19sp"
                android:maxLines="2"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:onClick="onCopy"
                android:focusable="true" />

            <TextView
                android:text="00:11:22:33:44:55"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="19sp"
                android:id="@+id/mac"
                android:layout_weight="1"
                android:maxLines="2"
                android:gravity="center"
                android:clickable="true"
                android:onClick="onCopy"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ap_details"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/manuf"
                android:textSize="14sp"
                android:text="ZTE Corporation"
                android:maxLines="2"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/sec1"
                android:text="Enc: WPA2 | Auth: PSK"
                android:maxLines="1"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ap_details2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/numbers"
                android:textSize="14sp"
                android:text="B: 20000 | D: 20000 | #s: 20000"
                android:maxLines="2"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/sec2"
                android:text="Cipher: TKIP"
                android:maxLines="1"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>

        <TextView
            android:text="@string/clients"
            android:id="@+id/clients_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"/>

    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <LinearLayout
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/deauth_all"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onDisconnect"
            android:text="@string/disconnect_all" />

        <Button
            android:id="@+id/crack"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCrack"
            android:text="@string/capture" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/dos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dos"
            android:layout_weight="1"
            android:onClick="onDos"/>
    </LinearLayout>

</LinearLayout>
